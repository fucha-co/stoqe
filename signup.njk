<!-- SIGNUP -->

{% if page.url == "/" or page.url == "/art-shop/" %}
    {% set heroBgColor = "black" %}
    {% set styleHack = "mt-20" %}
{% endif %}

<div class="{{ site.signup.style.block }} bg-{{heroBgColor}}/10 {% if styleHack %}{{ styleHack }}{% endif %}">
    <div class="{{ site.signup.style.container }} {{ site.style.container }}">
        
          <!--p class="{{ site.style.p }}">
              <span class="{{ site.signup.style.title }}">{{ site.signup.title }}</span>
              {{ site.signup.p }}
          </p-->
            <form
            action="https://buttondown.email/api/emails/embed-subscribe/sayso"
            method="post"
            target="popupwindow"
            onsubmit="window.open('https://buttondown.email/sayso', 'popupwindow')"
            class="embeddable-buttondown-form"
            >
            <!--label for="bd-email">Get new art in your Inbox</label>
            <br-->
            <label for="bd-email">
                {% if (page.url == "/") or (page.url == "/art-shop/") or (page.url == "/services/") %}
                    Get notified of new art drops...
                {% elseif (page.url == "/thank-you-form/") or (page.url == "/thank-you-subscribe/") %}
                    You can get new art drops in your Inbox too...
                {% else %}
                    Coming soon. Be the first to know...
                {% endif %}
            </label>
                <div class="grid gap-4 grid-cols-1 grid-rows-2 sm:grid-cols-5 sm:grid-rows-1 mt-8">
                    <input type="email" name="email" id="bd-email" class="sm:col-span-3 text-4xl sm:text5xl py-3 sm:px-5 border-none bg-white rounded-md text-{{ heroBgColor }} focus:ring-{{ heroBgColor }} focus:ring-2 focus:border-{{ heroBgColor }} placeholder:text-black placeholder:opacity-50" placeholder="Your email"/>
                    <input type="submit" value="Click to subscribe" class="sm:col-span-2 button rounded-md py-2 px-4 border-none shadow-lg text-4xl sm:text5xl text-white bg-{{ heroBgColor }} hover:text-white/50 focus:outline-none cursor-pointer" />
                </div>
            <p>
            </p>
            </form>
        
      </div>
  </div>
<!-- END SIGNUP -->